generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Auth {
  client_id     String @id
  client_secret String
  redirect_uri  String

  is_active  Boolean
  created_at DateTime @default(now())
  updated_at DateTime
  created_by String
  updated_by String

  User User[]
}

model User {
  user_id    String @id
  user_email String @unique
  user_name  String
  client_id  String

  is_active  Boolean
  created_at DateTime @default(now())
  updated_at DateTime
  created_by String
  updated_by String

  Transaction Transaction[]
  Auth        Auth          @relation(fields: [client_id], references: [client_id])
}

model Transaction {
  transaction_id       String   @id
  transaction_type     String // qris, transfer, topup, withdraw
  transaction_date     DateTime
  transaction_amount   Float
  transaction_status   String // success, pending, failed
  transaction_note     String
  transaction_currency String
  user_id              String

  is_active  Boolean
  created_at DateTime @default(now())
  updated_at DateTime
  created_by String
  updated_by String

  User User @relation(fields: [user_id], references: [user_id])
}

model Token {
  token_id   String   @id
  token_type String // access, refresh
  token_exp  DateTime
  user_id    String

  is_active  Boolean
  created_at DateTime @default(now())
  updated_at DateTime
  created_by String
  updated_by String
}
